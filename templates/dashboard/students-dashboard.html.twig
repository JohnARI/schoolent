{% extends 'base.html.twig' %}

{% block title %}
Dashboard Etudiant
{% endblock %}


{% block body %}

  <!--app-content open-->
            <div class="main-content app-content mt-0">
                <div class="side-app">

                    <!-- CONTAINER -->
                    <div class="main-container container-fluid">

                        <!-- PAGE-HEADER -->
                        <div class="page-header">
                            <h1 class="page-title">Bienvenue {{app.user.fullname}}!</h1>
                            </br>
                            <h1 class="page-title">Session {{app.user.session}}</h1>
                        </div>
                        <!-- PAGE-HEADER END -->

                        <!-- ROW OPEN-->
                        <div class="">
                            <div class="card">
                                <div class="card-body">
                                    <div class="cal1"></div>
                                </div>
                            </div>
                        </div>
                        <!-- ROW CLOSE-->

                        <!-- CAROUSEL -->
                        <div class="col-lg-12 col-md-2">
                                <div class="card">
                                    <div class="card-header">
                                        <h3 class="card-title">Evaluations</h3>
                                    </div>
                                    <div class="card-body h-50">
                                        <div id="carousel-controls" class="carousel slide" data-bs-ride="carousel">
                                            <div class="carousel-inner">
                                                <div class="carousel-item active">
                                                    <img class="d-block w-50 br-5" alt="" src="../assets/images/media/4.jpg" data-bs-holder-rendered="true">
                                                </div>
                                                <div class="carousel-item">
                                                    <img class="d-block w-50 br-5" alt="" src="../assets/images/media/5.jpg" data-bs-holder-rendered="true">
                                                </div>
                                                <div class="carousel-item">
                                                    <img class="d-block w-50 br-5" alt="" src="../assets/images/media/6.jpg" data-bs-holder-rendered="true">
                                                </div>
                                                <div class="carousel-item">
                                                    <img class="d-block w-50 br-5" alt="" src="../assets/images/media/7.jpg" data-bs-holder-rendered="true">
                                                </div>
                                                <div class="carousel-item">
                                                    <img class="d-block w-50 br-5" alt="" src="../assets/images/media/8.jpg" data-bs-holder-rendered="true">
                                                </div>
                                            </div>
                                            <a class="carousel-control-prev" href="#carousel-controls" role="button" data-bs-slide="prev">
                                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                <span class="sr-only">Previous</span>
                                            </a>
                                            <a class="carousel-control-next" href="#carousel-controls" role="button" data-bs-slide="next">
                                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                <span class="sr-only">Next</span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- CAROUSEL END-->

                       <!-- ROW-1 OPEN -->
                        <div class="row">
                            <div class="col-lg-6 col-md-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h3 class="card-title">Moyenne générale</h3>
                                    </div>
                                    <div class="card-body">
                                        <div class="chart-container">
                                            <canvas id="chartBar2" class="h-275"></canvas>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h3 class="card-title">Statistique</h3>
                                    </div>
                                    <div class="card-body">
                                        <div class="chart-container">
                                            <canvas id="chartRadar" class="h-275"></canvas>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- ROW-1 CLOSE -->
                        
                    <!-- CONTAINER END -->
                </div>
            </div>
            <!--app-content close-->
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}
	Administrator
{% endblock %}

{% block body %}
	<!-- PAGE -->
	<div class="page">
		<div
			class="page-main">
			<!--app-content open-->
			<div class="main-content app-content mt-0">
				<div
					class="side-app">
					<!-- Row -->
					<div class="row row-sm">
						<div class="col-lg-12">
							<div class="card">
								<div class="card-header">
									<h3 class="card-title">technologies</h3>
								</div>
								<div class="card-body">
									<a href="{{path('add_techno')}}" id="table2-new-row-button" class="btn btn-primary mb-4">
										Ajouter une nouvelle technologie</a>
									<div class="table-responsive">
										<table id="example3" class="table table-striped table-bordered text-nowrap">
											<thead>
												<tr>
													<th>Technologies</th>
													<th class="wd-25p">Options</th>
												</tr>
											</thead>
											<tbody>
												{% for techno in technologies %}
													<tr>
														<td>
                                                        <img style="height:50px;width:50px;" src="{{ asset('uploads/techno/' ~ techno.picture)}}" alt="">
                                                        <strong>{{ techno.name }}</strong></td>
														<td>
															<div class="d-flex justify-content-between text-white pills badge badge-pill ">
																{# <a href="{{ path('technologies_edit', { 'id':techno.id }) }}"> #}
																	<i class="fa fa-edit"></i>
																</a>
															</div>
														</td>
													</tr>
												{% endfor %}
											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- End Row -->
				</div>
				<!-- CONTAINER CLOSED -->

			</div>
		</div>
		<!--app-content closed-->
	</div>


{% endblock %}

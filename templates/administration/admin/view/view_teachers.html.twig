{% block body %}

<div class="table-responsive">
	<table class="table table-bordered text-nowrap border-bottom" id="responsive-datatable">
		<thead>
			<tr>
				<th class="wd-15p border-bottom-0">Photo</th>
				<th class="wd-15p border-bottom-0">Pr√©nom</th>
				<th class="wd-15p border-bottom-0">Nom</th>
				<th class="wd-20p border-bottom-0">Role</th>
				<th class="wd-10p border-bottom-0">Email</th>
                {% if app.user and app.user.role == 'Administrateur'%}
				<th class="wd-10p border-bottom-0">Actions</th>
                {% endif %}

			</tr>
		</thead>
		<tbody>
			{% for teacher in teachers %}
				<tr>
					<td><img style="height:100px;width:100px;" src="{{ asset('uploads/user/' ~ teacher.picture)}}" alt="Photo de profil"></td>
					<td>{{ teacher.firstname }}</td>
					<td>{{ teacher.lastname }}</td>
					<td>{{ teacher.role }}</td>
					<td>{{ teacher.email }}</td>

                    {% if app.user and app.user.role == 'Administrateur'%}
					<td name="bstable-actions">
						<div
							class="btn-list">
							{# Bouton modifier #}
							<a href="{{path('edit_user',{'id': teacher.id})}}" id="bEdit" type="button" class="btn btn-sm btn-primary">
								<span class="fe fe-edit"></span>
							</a>
							{# fin bouton modifier #}

							{# Bouton supprimer #}
							<a href="{{path('delete_user',{'id': teacher.id})}}" id="bDel" type="button" class="btn btn-sm btn-danger">
								<span class="fe fe-trash-2"></span>
							</a>
							{# fin bouton supprimer #}
						</div>
					</td>
                    {% endif %}
				</tr>
			{% endfor %}

		</tbody>
	</table>
</div>
{% endblock %}

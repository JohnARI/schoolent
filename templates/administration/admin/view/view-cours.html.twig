{% extends 'base.html.twig' %}

{% block title %}
	Cours
{% endblock %}

{% block body %}
	<!-- PAGE -->
	<div class="page">
		<div
			class="page-main">
			<!--app-content open-->
			<div class="main-content app-content mt-0">
				<div
					class="side-app">
					<!-- Row -->
					<div class="row row-sm">
						<div class="col-lg-12">
							<div class="card">
								<div class="card-header">
									<h3 class="card-title">Cours</h3>
								</div>
								<div class="card-body">
									<a href="{{path('add-cours')}}" id="table2-new-row-button" class="btn btn-primary mb-4">
										Ajouter un cours</a>
									<div class="table-responsive">
									<div style="position: relative; z-index: 55;" class="col-sm-12 col-lg-12 col-xl-12">
										{% for message in app.flashes('success') %}
                                            <div class="col-md-12 alert alert alert-success alert-dismissible fade show" role="alert">
                                                {{ message }}
                                                <button type="button" class="close" data-dismiss="alert" aria-label="close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                        {% endfor %}
									</div>
										<table id="example3" class="table table-striped table-bordered text-nowrap">
											<thead>
												<tr>
                                                    <th>Id</th>
													<th>Intitul√©</th>
													<th>Lien</th>
													<th>Description</th>
													<th>Language</th>
													<th class="wd-25p">Options</th>
												</tr>
											</thead>
											<tbody>
												{% for cours in course %}
													<tr>
						
                                                        <td>{{ cours.id }}</td>
                                                        <td>{{ cours.name }}</td>
                                                        <td>{{ cours.link }}</td>
                                                        <td>{{ cours.description }}</td>
                                                        <td>{{ cours.category.name}}</td>
														<td>
															<div class="btn-list">
                                                            	{# Bouton upload #}
                                                                <a href="{{ asset('uploads/cours/' ~ cours.link )}}"
																download="{{ cours.name }}" class="btn btn-sm btn-light">
																<i class="fe fe-download text-success"></i>
															    </a>
                                                                {# fin bouton upload #}

                                                                {# Bouton supprimer #}
                                                                <a href="{{ path('delete-cours', {'id': cours.id })}}" id="bDel" type="button" class="btn btn-sm btn-danger">
                                                                    <span class="fe fe-trash-2"></span>
                                                                </a>
                                                                {# fin bouton supprimer #}
                                                            </div>
														</td>
													</tr>
												{% endfor %}
											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- End Row -->
				</div>
				<!-- CONTAINER CLOSED -->

			</div>
		</div>
		<!--app-content closed-->
	</div>


{% endblock %}

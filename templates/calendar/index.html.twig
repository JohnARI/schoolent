{% extends 'base.html.twig' %}

{% block title %}Calendar index
{% endblock %}

{% block body %}
	<h1>Calendar index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>CreatedAt</th>
				<th>Start</th>
				<th>End</th>
				<th>Title</th>
				<th>Description</th>
				<th>Teacher</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for calendar in calendars %}
				<tr>
					<td>{{ calendar.teacherId }}</td>
					<td>{{ calendar.createdAt ? calendar.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ calendar.start ? calendar.start|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ calendar.end ? calendar.end|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ calendar.title }}</td>
					<td>{{ calendar.Description }}</td>
                    <td>{{ calendar.teacherName }}</td>
					<td>
						<a href="{{ path('calendar_show', {'id': calendar.teacherId}) }}">consulter</a>
						<a href="{{ path('calendar_edit', {'id': calendar.id}) }}">modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('calendar_new') }}">Create new</a>
{% endblock %}
